<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
 <display-name>jetty.reports.actions</display-name>
  
 <filter>
   <filter-name>securityFilter</filter-name>
   <filter-class>jetty.reports.actions.security.SecurityFilter</filter-class>
 </filter>
  
  <filter-mapping>
    <filter-name>securityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>mainServlet</servlet-name>
    <servlet-class>jetty.reports.actions.servlet.MainServlet</servlet-class>
  </servlet>
	   
  <servlet>
    <servlet-name>authServlet</servlet-name>
    <servlet-class>jetty.reports.actions.servlet.AuthorizationServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>unauthServlet</servlet-name>
  	<servlet-class>jetty.reports.actions.servlet.UnauthorizationServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>fileViewServlet</servlet-name>
  	<servlet-class>jetty.reports.actions.servlet.FileViewServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>fileUploadingServlet</servlet-name>
  	<servlet-class>jetty.reports.actions.servlet.FileUploadingServlet</servlet-class>
  </servlet>
  
   <servlet>
  	<servlet-name>fileDownloadingServlet</servlet-name>
  	<servlet-class>jetty.reports.actions.servlet.FileDownloadingServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>emailUpdatingServlet</servlet-name>
  	<servlet-class>jetty.reports.actions.servlet.EmailUpdatingServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
     <servlet-name>mainServlet</servlet-name>
     <url-pattern>/main</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>authServlet</servlet-name>
  	<url-pattern>/auth</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>unauthServlet</servlet-name>
  	<url-pattern>/unauth</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>fileViewServlet</servlet-name>
  	<url-pattern>/file</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>fileUploadingServlet</servlet-name>
  	<url-pattern>/file/upload</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>fileDownloadingServlet</servlet-name>
  	<url-pattern>/file/download</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>emailUpdatingServlet</servlet-name>
  	<url-pattern>/email</url-pattern>
  </servlet-mapping>
	
  <welcome-file-list>
  	<welcome-file>WEB-INF/views/mainView.html</welcome-file>
  </welcome-file-list>
  
</web-app>